#!/bin/sh

# Get list of staged files that are JS/TS files
STAGED_FILES=$(git diff --cached --name-only --diff-filter=ACMR | grep -E '\.(js|jsx|ts|tsx)$' || true)

# If there are no JS/TS staged files, exit successfully
if [ -z "$STAGED_FILES" ]; then
  echo "No JS/TS files to check, skipping Biome check"
  exit 0
fi

# Run Biome check only on staged JS/TS files
echo "Running Biome check on staged JS/TS files..."
npx biome check $STAGED_FILES
exit $?
